{
  "_comment": "Blog automation cron configuration",
  "crons": [
    {
      "path": "/api/blog-bot",
      "schedule": "0 6 * * 1"
    },
    {
      "path": "/api/revalidate",
      "schedule": "0 7 * * *"
    }
  ],
  "functions": {
    "pages/api/blog-bot.ts": {
      "maxDuration": 300
    }
  },
  "redirects": [
    {
      "source": "/blog/:path*",
      "destination": "/blogs/:path*",
      "permanent": true
    }
  ]
}